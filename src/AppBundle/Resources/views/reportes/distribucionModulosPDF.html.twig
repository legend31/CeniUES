{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="file:///c:/xampp/htdocs/ceniues/web/libs/AdminLTE-2.2.0/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
{% endblock %}
{% block body %}
    <section class="content invoice">
        <div class="row">
            <div class="col-xs-12">
                <h1 align="center">Listado de distribucion de Modulos</h1>
                <img src="file:///c:/xampp/htdocs/ceniues-master/web/images/ceniueslogo2.png">
                <div class="col-lg-12">
                    <table>
                        <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Lugar</th>
                        </tr>
                        <tbody>
                        <tr>
                            <th>{{ "now"|date('d-m-Y') }}</th>
                            <th>San Salvador EL Salvador</th>
                        </tr>
                        </tbody>
                        </thead>
                    </table>
                </div>
                <i class="fa fa-globe"></i>
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> CENIUES
                </h2>
            </div>
        </div>

        <di class="row">
        </di>

        <div class="row">
            <div class="col-xs-12 table-responsive" >
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Modulo</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                    </tr>
                    </thead>
                    <tbody class="table border-l">
                    {% for mod in modulos %}
                        <tr>
                            <td bgcolor="#f0f8ff">{{ mod.nombremodulo }}</td>
                            <td bgcolor="#f0f8ff">{{ mod.fechainicio |date('d-m-Y') }}</td>
                            <td bgcolor="#f0f8ff">{{ mod.fechafin |date('d-m-Y') }}</td>
                        </tr>
                        {% for niveles in mod.nivelnivel %}
                            <tr>
                                <td bgcolor="#fffff0">{{ niveles.nombrenivel }}</td>
                                <td bgcolor="#fffff0">{{ niveles.fechainicio.format('d-m-Y') }}</td>
                                <td bgcolor="#fffff0">{{ niveles.fechafin.format('d-m-Y') }}</td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </section>
{% endblock %}