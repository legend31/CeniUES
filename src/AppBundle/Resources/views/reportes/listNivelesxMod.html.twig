{% extends "::layoutbase.html.twig" %}

{% block tittle %}{{ TituloPagina }}{% endblock %}

{% block principal %}
    <div class="pad margin no-print"></div>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> Listado de niveles para el modulo
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 table-responsive" >
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Nivel</th>
                            <th>Maestro</th>
                            <th>Aula</th>
                            <th>Edificio</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for nivel in niv %}
                        <tr>
                            <td>{{ nivel.nombrenivel }}</td>
                            <td>Larisa Carrillo</td>
                            <td>16</td>
                            <td>Edificio de idiomas</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row no-print">
            <div class="col-xs-12">
                <a href="{{ path('lnivelesmodulosPDF') }}" class="btn btn-primary pull-right"><i class="fa fa-download"></i> Generate PDF</a>
            </div>
        </div>
    </section>
{% endblock %}