{% extends "::layoutbase.html.twig" %}
    {% block principal %}
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Actualizar Modulo</h3>
                        </div>
                        <form role="form" method="POST" action="{{ path('actualizarmod',{'id':id}) }}">
                            <div class="box-body">

                                <div class="form-group col-sm-12">
                                    <label>Nombre de Modulo</label>
                                    <input id="nombremodulo" name="nombremodulo" type="text" class="form-control" value="{{ modulo.nombremodulo }}">
                                </div>
                                <br>
                                <div class="form-group col-sm-12">
                                    <label>Fecha Inicio</label>
                                    <input id="fini" name="fini" type="text" class="form-control" value="{{ modulo.fechainicio | date('d-m-Y') }}">
                                </div>
                                <br>
                                <div class="form-group col-sm-12">
                                    <label>Fecha Fin</label>
                                    <input id="ffin" name="ffin" type="text" class="form-control" value="{{ modulo.fechafin | date('d-m-Y')  }}">
                                </div>
                                <br>
                                <div class="form-group col-sm-12">
                                    <label>Duracion</label>
                                    <input id="duracion" name="duracion" type="text" class="form-control" value="{{ modulo.duracion }}">
                                </div>

                            </div>
                            <div class="box-footer">
                                <div class="col-sm-6">
                                    <input type="submit" class="btn btn-primary" value="Guardar" id="guardarmod">
                                    <button type="submit" class="btn btn-danger">Cancelar</button>
                                </div>
                            </div>
                        </form>
                    </div>


                </div>
                <div class="row col-xs-12">
                    <div class="callout callout-success" id="msgExito" name="msgExito" style="display:none">
                        <h4>Ingreso Exitoso</h4>
                        <p>El modulo fue ingresado con exito</p>
                    </div>
                </div>


                </div>
            </div>
        </section>
    {% endblock %}
