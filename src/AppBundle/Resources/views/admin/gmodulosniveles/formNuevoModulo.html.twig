{% extends "::layoutbase.html.twig" %}

    {% block principal %}
        <section class="content" id="mensaje">
            <div class="row">
                <div class="col-xs-5">
                    {% for flashMessage in app.session.flashbag.get('exito') %}
                        <script>
                            window.onload = function notificacion(){
                                alertify.log("{{ flashMessage }}.");
                                return false;
                            }
                        </script>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <script>
                            window.onload = function error(){
                                alertify.error("{{ flashMessage }}.");
                                return false;
                            }
                        </script>
                    {% endfor %}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Ingreso de Modulo</h3>
                        </div>
                        <form role="form" method="POST" action="{{ path('nmod') }}">
                            <div class="box-body">
                                <div class="form-group col-sm-12">
                                    <label>Nombre de Modulo</label>
                                    <input id="nombreMod" name="nombreMod" type="text" class="form-control" placeholder="Ingrese el nombre del modulo" required>
                                </div>
                                <br>
                                <div class="form-group col-sm-6">
                                    <label>Fecha de Inicio</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input id="fini" name="fini" type="date" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="" required>
                                    </div>
                                </div>

                                <div class="form-group col-sm-6">
                                    <label>Fecha de Finalizacion</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input id="ffin" name="ffin" type="date" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="" required>
                                    </div>
                                </div>

                            </div>
                            <div class="box-footer">
                                <div class="col-sm-6">
                                    <input type="submit"class="btn btn-primary" value="Guardar" id="guardarmod" id="guardarmod">
                                    <button type="submit" class="btn btn-danger">Cancelar</button>
                                </div>
                            </div>
                        </form>

                    </div>
                    <div class="row col-xs-12">
                        <div class="callout callout-success" id="msgExito" name="msgExito" style="display:none">
                            <h4>Ingreso Exitoso</h4>
                            <p>El modulo fue ingresado con exito</p>
                        </div>
                    </div>

                </div>
                <div class="row col-xs-12">
                    <div class="callout callout-danger" id="msgFallo" name="msgFallo" style="display:none">
                        <h4>Ingreso Exitoso</h4>
                        <p>El modulo no fue ingresado con exito</p>
                    </div>
                </div>

                </div>
            </div>
        </section>
    {% endblock %}