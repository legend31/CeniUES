{% extends '::layoutbase.html.twig' %}
{% block body %}
    <div class="container">
        <h2>Ingreso de Alumno</h2>
        <form method="post" action="{{ path('alumnoinsert') }}">
            <div class="form-group">
                <label for="inputCarnet">Carnet</label>
                <input id="inputCarnet" class="form-control" type="text" name="carnet" required>
            </div>
            <div class="form-group">
                <label for="inputPrimer">Primer Nombre</label>
                <input id="inputPrimer" class="form-control" type="text" name="primer_nombre" required>
            </div>
            <div class="form-group">
                <label for="inputSegundo">Segundo Nombre</label>
                <input id="inputSegundo" class="form-control" type="text" name="segundo_nombre" required>
            </div>
            <div class="form-group">
                <label for="">Primer Apellido</label>
                <input id="inputPrimerApe" class="form-control" type="text" name="primer_apellido" required>
            </div>
            <div class="form-group">
                <label for="">Segundo Apellido</label>
                <input id="inputSegApe" class="form-control" type="text" name="segundo_apellido" required>
            </div>
            <div class="form-group">
                <label for="">Fecha de Nacimiento</label>
                <input id="inputFecha" class="form-control" type="date" name="fecha_nacimiento" required>
            </div>
            <div class="form-group">
                <label for="">Edad</label>
                <input id="inputEdad" class="form-control" type="text" name="edad">
            </div>
            <div class="form-group">
                <label for="">Responsable</label>
                <select name="responsable">
                    {% for item in responsables %}
                        <option value="{{ item.idresponsable }}">{{ item.nombreresponsable }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="">Padre</label>
                <select name="padre">
                    {% for item in padres %}
                        <option value="{{ item.idpadre }}">{{ item.nombrepadre }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="">Matricula</label>
                <select name="matricula">
                    {% for item in matriculas %}
                        <option value="{{ item.idmatricula }}">{{ item.numerorecibo }}</option>
                    {% endfor %}
                </select>
            </div>
            <input class="btn bg-primary" type="submit" value="Enviar">
        </form>
    </div>
{% endblock %}