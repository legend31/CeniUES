{% extends '::pbase.html.twig' %}
{% block body %}
    <div class="container">
        <h2>Ingreso de Responsable</h2>
        <br>
        <form class="form-horizontal" method="post" action="{{ path('responinsert') }}">
            <div class="form-group">
                <label class="control-label col-lg-2" for="inputNombre">Nombre</label>
                <div class="col-lg-7">
                    <input id="inputNombre" class="form-control" type="text" name="nombre" required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2" for="inputP">Parentesco</label>
                <div class="col-lg-7">
                    <input id="inputP" class="form-control" type="text" name="parentesco" required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2" for="inputtel">Telefono</label>
                <div class="col-lg-7">
                    <input id="inputtel" class="form-control" type="text" name="tel" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-7">
                    <input class="btn bg-primary" type="submit" value="Guardar">
                </div>
            </div>
        </form>
    </div>
{% endblock %}