{% extends '::boostrapbase.html.twig' %}
{% block body %}
    <div class="container">
        <div class="col-sm-offset-1">
            <h2>Ingreso de Responsable</h2>
            {% for flashMessage in app.session.flashbag.get('exito') %}
                <script>
                    window.onload = function notificacion(){
                        alertify.log("{{ flashMessage }}.");
                        return false;
                    }
                </script>
            {% endfor %}
        </div>
        <form class="form-horizontal" method="post" action="{{ path('responinsert') }}">
            <div class="form-group">
                <label class="control-label col-sm-3" for="inputNombre">Nombre</label>
                <div class="col-sm-4">
                    <input id="inputNombre" class="form-control" type="text" name="nombre" required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="inputP">Parentesco</label>
                <div class="col-sm-4">
                    <input id="inputP" class="form-control" type="text" name="parentesco" pattern="[" required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="inputtel">Telefono</label>
                <div class="col-sm-4">
                    <input id="inputtel" class="form-control" type="text" name="tel" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-4">
                    <input class="btn bg-primary" type="submit" value="Guardar">
                </div>
            </div>
        </form>
    </div>
{% endblock %}