{% extends 'AppBundle:matricula:desmatricularform.html.twig' %}
{% block title %}
    Desmatriculacion Alumno
{% endblock %}
{% block principal %}
    {{ parent() }}
    {% if mat %}
        <br>
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">

                        <!--Inicia Cabecera de tabla-->
                        <div class="box-header">
                            <h3 class="box-title">Informacion de alumno</h3>
                        </div>
                        <!--Finaliza Cabecera de tabla-->

                        <!--Inicia cuerpo de tabla-->
                        <div class="box-body table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Edad</th>
                                <th>Nivel</th>
                                <th>Responsable</th>
                                <th>Estado</th>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>{{ mat.alumnoCarnetalumno.primernombrealumno }} {{ mat.alumnoCarnetalumno.segundonombrealumno}}</td>
                                    <td>{{ mat.alumnoCarnetalumno.primerapellidoalumno }} {{ mat.alumnoCarnetalumno.segundoapellidoalumno }}</td>
                                    <td>{{ mat.alumnoCarnetalumno.edad }}</td>
                                    <td>{{ mat.nivelnivel.Idnivel}}</td>
                                    <td>{{ mat.alumnoCarnetalumno.responsableresponsable.Nombreresponsable }}</td>
                                    <td>
                                        {% if mat and mat.esactivo == 1 %}
                                            <a href="{{ path('des',{'d':mat.idmatricula}) }}" title="Desmatricular">
                                                <img src="{{ asset('bundles/app/images/dislike.png') }}">
                                            </a>
                                        {% else %}
                                            Inactivo
                                        {% endif %}
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <!--Finaliza Cuerpo de tabla-->
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}