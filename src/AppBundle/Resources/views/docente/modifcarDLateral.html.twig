{% extends "::layoutbase.html.twig" %}

{% block title %} Buscar docentes {% endblock %}

{% block principal %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Buscar docente a modificar</h3>
                    </div><!-- /.box-header -->
                    <form role="form" method="post" action="{{ path('modD2') }}">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-2 text-right">
                                    <label>Buscar docente:</label>
                                </div>
                                <div class="col-md-3 input-group">
                                    <input type="text" name="carnet" class="form-control input-sm pull-right" id="carnetH" placeholder="Buscar por carnet" maxlength="7" pattern="[a-zA-Z]{2}[0-9]{5}">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-default" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </div><!-- /.col -->
                            </div><!-- /.row -->
                        </div>
                    </form>
                    {% if modif == 'no encuentra' %}
                        <br>
                        <div class="alert alert-warning alert-dismissable">
                            <h4><i class="icon fa fa-warning"></i> No se encontro docente asociado con el carnet ingresado.</h4>
                        </div>
                        <br>
                    {% endif %}
                </div><!-- /.box -->
            </div>
        </div>
    </section>

{% endblock %}
{% block javascript2 %}
    <script src="{{ asset('libs/AdminLTE-2.2.0/plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
    <script src="{{ asset('libs/AdminLTE-2.2.0/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('libs/AdminLTE-2.2.0/Validacion/validacion.js') }}"></script>
{% endblock %}