{% extends "::layoutbase.html.twig" %}

{% block title %} Gestionar docentes {% endblock %}

{% block principal %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Buscar docente en el sistema</h3>
                    </div><!-- /.box-header -->
                    <form role="form" method="post" action="{{ path('consultarD') }}">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-2 text-right">
                                    <label>Buscar por:</label>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <select class="form-control select2 select2-hidden-accessible" name="selS" tabindex="-1" aria-hidden="true">
                                            <option selected="selected">Carnet</option>
                                            <option>DUI</option>
                                            <option>Nombre</option>
                                            <option>Apellido</option>
                                        </select>
                                    </div><!-- /.form-group -->
                                </div><!-- /.col -->
                                <div class="col-md-3 input-group">
                                    <input type="text" name="parB" class="form-control input-sm pull-right" id="" placeholder="Buscar">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-default" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </div><!-- /.col -->
                            </div><!-- /.row -->
                        </div>
                    </form>
                    {% if docentes is not null %}
                    <div class="box-body table-responsive no-padding">
                        {% for entity in docentes %}
                                <div class="box-body">
                                    <div class="form-group">
                                        <label for="form_nombredocente" class="col-sm-3 control-label">Nombre</label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control letras" id="form_nombredocente" name="ndoc" value="{{ entity.getNombredocente }}" required>
                                            <span class="form-control-feedback"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="form_apellidodocente" class="col-sm-3 control-label">Apellido</label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control letras" id="form_apellidodocente" name="adoc" value="{{ entity.getApellidodocente }}" required>
                                            <span class="form-control-feedback"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="form_dui" class="col-sm-3 control-label"> DUI </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="form_dui" placeholder="99999999-9" name="ddoc" maxlength=10 value="{{ entity.getDui }}" onKeypress="if (event.keyCode < 45 || event.keyCode > 57) event.returnValue = false;" pattern="[0-9]{8}[-]{1}[0-9]{1}" required>
                                            <span class="form-control-feedback"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="form_carnetdocente" class="col-sm-3 control-label"> Carnet </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="form_carnetdocente" name="cdoc" placeholder="AA00000" maxlength=7 value="{{ entity.carnetdocente }}" pattern="[A-Z]{2}[0-9]{5}" required>
                                            <span class="form-control-feedback"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="form_fechanacimiento" class="col-sm-3 control-label"> Fecha de Nacimiento</label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="form_fechanacimiento" name="fdoc" value="{{ entity.Fechanacimiento }}" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="form_direcciondocente" class="col-sm-3 control-label"> Direcci&oacute;n de residencia </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="form_direcciondocente" name="rdoc" placeholder="" required>
                                            <span class="form-control-feedback"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="form_direcciondocente" class="col-sm-3 control-label"> N&uacute;mero telef&oacute;nico </label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="form_telefonodocente" name="tdoc" maxlength="9" value="{{ entity.getTelefono }}" onKeypress="if (event.keyCode < 45 || event.keyCode > 57) event.returnValue = false;" placeholder="2222-2222" pattern="[0-9]{4}[-]{1}[0-9]{4}" required>
                                            <span class="form-control-feedback"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="form_direcciondocente" class="col-sm-3 control-label"> Correo electr&oacute;nico </label>
                                        <div class="col-sm-6">
                                            <input type="email" class="form-control" id="form_email" name="edoc" pattern="[0-9a-zA-z]{4,20}[@]{1}[0-9a-zA-Z]{4,10}[.]{1}[0-9a-zA-Z]{3}" required>
                                            <span class="form-control-feedback"></span>
                                        </div>
                                    </div>
                                </div>
                        {% endfor %}
                    </div><!-- /.box-body -->
                    {% endif %}
                </div><!-- /.box -->
            </div>
        </div>
    </section>

{% endblock %}
{% block javascript2 %}
    <script src="{{ asset("libs/AdminLTE-2.2.0/plugins/select2/select2.full.min.js") }}" type="text/javascript"></script>
{% endblock %}