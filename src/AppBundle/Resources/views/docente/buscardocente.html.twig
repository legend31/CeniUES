{% extends "::layoutbase.html.twig" %}

{% block title %} Gestionar docentes {% endblock %}

{% block principal %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Docentes registrados en el sistema</h3>
                    </div><!-- /.box-header -->
                    <br><br>
                    <div class="box-tools">
                        <div class="input-group" style="width: 350px;">
                            <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Buscar">
                            <div class="form-group">
                                <select>
                                    <option>Carnet</option>
                                    <option>Nombre</option>
                                    <option>Apellido</option>
                                    <option>Responsables</option>
                                </select>
                            </div>
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                            <tr>
                                <th>Carnet</th>
                                <th>Apellidos</th>
                                <th>Nombres</th>
                                <th>DUI</th>
                                <th>Telefono</th>
                                <th>Opciones</th>
                            </tr>
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section>
{% endblock %}