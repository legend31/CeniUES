{% extends "::layoutbase.html.twig" %}

{% block title %} Agregar Docente {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('libs/AdminLTE-2.2.0/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block principal %}
    <section class="content-header">
        <h1>
            Nuevo docente<br>
            <small>Digite los datos que se le solicitan en el siguiente formulario:</small>
        </h1><br>
    <!-- INICIO -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Datos personales</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" role="form" method="post" action="{{ path('insertarD') }}">
                <div class="box-body">
                    <div class="form-group">
                        <label for="form_nombredocente" class="col-sm-3 control-label">Nombre</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control has-success" id="form_nombredocente" name="ndoc" placeholder="Nombres del nuevo docente" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form_apellidodocente" class="col-sm-3 control-label"> Appellido </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="form_apellidodocente" name="adoc" placeholder="Apellidos del nuevo docente" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form_dui" class="col-sm-3 control-label"> DUI </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="form_dui" name="ddoc" placeholder="" data-inputmask="'mask': ['999-999-9999 [x99999]', '+099 99 99 9999[9]-9999']" data-mask required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form_carnetdocente" class="col-sm-3 control-label"> Carnet </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="form_carnetdocente" name="cdoc" placeholder="AA00000" maxlength=7 required pattern="[A-Z]{2}[0-9]{5}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form_direcciondocente" class="col-sm-3 control-label"> Direcci&oacute;n de residencia </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="form_direcciondocente" name="rdoc" placeholder="Direcci&oacute;n de residencia" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form_direcciondocente" class="col-sm-3 control-label"> N&uacute;mero telef&oacute;nico </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="form_telefonodocente" name="tdoc" placeholder="N&uacute;mero de telef&oacute;no" required>
                        </div>
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer">
                    <!-- <button type="submit" class="btn btn-primary">Guadar</button> -->
                    <div class="form-group">
                        <div class="col-sm-offset-0 col-sm-2">
                            <button class="btn bg-green-gradient" type="submit"><i class="fa fa-save"> Guardar</i></button>
                        </div>
                        <a class="btn btn-default bg-blue-gradient" href="#">
                            <i class="fa fa-trash"></i> Limpiar
                        </a>
                        <a class="btn btn-default bg-red-gradient" href="{{ path('dhome') }}">
                            <i class="fa fa-close"></i> Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div><!-- /.box -->
    </div>
    </section>
{% endblock %}

{% block javascript %}
    <script src="{{ asset('libs/AdminLTE-2.2.0/plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
    <script src="{{ asset('libs/AdminLTE-2.2.0/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('libs/AdminLTE-2.2.0/Validacion/validacion.js') }}"></script>
{% endblock %}