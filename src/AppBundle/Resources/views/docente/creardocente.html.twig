{% extends "::layoutbase.html.twig" %}

{% block title %} Agregar Docente {% endblock %}

{% block principal %}
    <section class="content-header">
        <h1>
            Nuevo docente<br>
            <small>Digite los datos que se le solicitan en el siguiente formulario:</small>
        </h1><br>
    <!-- INICIO -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Datos personales</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="post" action="{{ path('insertarD') }}">
                <div class="box-body">
                    <div class="form-group">
                        <label for="form_nombredocente">Nombre</label>
                        <input type="text" class="form-control" id="form_nombredocente" name="ndoc" placeholder="Nombres del nuevo docente">
                    </div>
                    <div class="form-group">
                        <label for="form_apellidodocente"> Appellido </label>
                        <input type="text" class="form-control" id="form_apellidodocente" name="adoc" placeholder="Apellidos del nuevo docente">
                    </div>
                    <div class="form-group">
                        <label for="form_dui"> DUI </label>
                        <input type="text" class="form-control" id="form_dui" name="ddoc" placeholder="Documento Unico de Identidad" required>
                    </div>
                    <div class="form-group">
                        <label for="form_carnetdocente"> Carnet </label>
                        <input type="text" class="form-control" id="form_carnetdocente" name="cdoc" placeholder="N&uacute;mero de carnet" maxlength=7>
                    </div>
                    <div class="form-group">
                        <label for="form_direcciondocente"> Direcci&oacute;n de residencia </label>
                        <input type="text" class="form-control" id="form_direcciondocente" name="rdoc" placeholder="Direcci&oacute;n de residencia">
                    </div>
                    <div class="form-group">
                        <label for="form_direcciondocente"> N&uacute;mero telef&oacute;nico </label>
                        <input type="text" class="form-control" id="form_telefonodocente" name="tdoc" placeholder="N&uacute;mero de telef&oacute;no">
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer">
                    <!-- <button type="submit" class="btn btn-primary">Guadar</button> -->
                    <div class="form-group">
                        <div class="col-sm-offset-0 col-sm-4">
                            <button class="btn bg-green-gradient" type="submit"><i class="fa fa-save"> Guardar</i></button>
                            <button class="btn bg-primary"><i class="fa fa-trash"> Limpiar</i></button>
                        </div>
                        <a class="btn btn-default bg-red-gradient pull-right" href="{{ path('dhome') }}">
                            <i class="fa fa-close"></i> Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div><!-- /.box -->
    </div>
    </section>
{% endblock %}