{% extends "::layoutbase.html.twig" %}

{% block title %} Asignar niveles {% endblock %}

{% block principal %}
    <head>
        <script src="{{ asset("libs/AdminLTE-2.2.0/plugins/jQuery/jQuery-2.1.4.min.js") }}" type="text/javascript"></script>
    </head>
{% for docente in clase %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-danger">
                    <div class="box-header">
                        <h3 class="box-title">Reasignar al docente {{ docente.docenteCarnetdocente.carnetdocente }}</h3>
                    </div><br><br>

                        <form class="form-horizontal contact-form" method="post" role="form" action="{{ path('asignarD') }}">
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="form_nombredocente" class="col-sm-3 control-label">Sellecione un nivel </label>
                                    <select name="nivel">
                                        {% for nivel in niveles %}
                                            <option value="{{ nivel.nombrenivel }}">{{ nivel.nombrenivel }}</option>
                                        {% endfor %}
                                    </select>
                                    <i class="text-red">{{ docente.nivelnivel.nombrenivel }} </i>
                                </div>
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default bg-green-gradient" type="submit"><i class="fa fa-save"> Guardar</i></button>
                                </div>
                            </div>
                        </form>

                </div><!-- /.box -->
            </div>
        </div>
    </section>
    {% endfor %}

{% endblock %}
