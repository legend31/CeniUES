{% extends "::layoutbase.html.twig" %}

{% block title %} Gestionar docentes {% endblock %}

{% block principal %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Docentes registrados en el sistema</h3>
                        <div class="box-tools">
                            <div class="input-group" style="width: 350px;">
                                <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Buscar">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                    <button class="btn btn-default btn-sm" data-widget="add" data-toggle="tooltip" title="" data-original-title=""><i class="fa fa-plus"></i> Agregar Docente</button>
                                </div>

                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>Carnet</th>
                                    <th>Apellidos</th>
                                    <th>Nombres</th>
                                    <th>DUI</th>
                                    <th>Telefono</th>
                                    <th>Opciones</th>
                                </tr>
                                {% for entity in docentes %}
                                    <tr>
                                        <td>{{ entity.getCarnetdocente }}</td>
                                        <td>{{ entity.getApellidodocente }}</td>
                                        <td>{{ entity.getNombredocente }}</td>
                                        <td>{{ entity.getDui }}</td>
                                        <td>{{ entity.getTelefono }}</td>
                                        <td>
                                            <div class="fc-button-group">
                                                <button class="btn btn-default btn-sm" data-widget="" data-toggle="tooltip" title="" data-original-title="Detalles"><i class="fa fa-eye"></i></button>
                                                <button class="btn btn-default btn-sm" data-widget="" data-toggle="tooltip" title="" data-original-title="Editar"><i class="fa fa-pencil"></i></button>
                                                <button class="btn btn-default btn-sm" data-target="#eliminar" data-toggle="modal" title="" data-original-title="Eliminar"><i class="fa fa-times"></i></button>

                                                <div class="modal fade" id="eliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria_hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section>
{% endblock %}

{% block javascript2 %}
    <script href="https://code.jquery.com/jquery.js"></script>
    <script src="{{ asset('libs/AdminLTE-2.2.0/bootstrap/js/boostrap.min.js') }}"></script>
{% endblock %}