{% block javascript2 %}
    <script href="https://code.jquery.com/jquery.js"></script>
    <script src="{{ asset('libs/AdminLTE-2.2.0/bootstrap/js/boostrap.min.js') }}"></script>
    <script>
        function detallesDocentes(id){
            $.ajax({
                url:'{{ path('detallesD') }}',
                type: 'POST',
                data: { carnetdocente:id },
                success:function(response){
                    $('#carnet').val(response.carnetdoc);
                    $('#nombres').val(response.nombre);
                    $('#apellidos').val(response.apellido);
                    $('#dui').val(response.dui);
                    $('#address').val(response.direccion);
                    $('#fnacim').val(response.fnac);
                    $('#ntelef').val(response.ntel);
                }
            })
        }
    </script>
