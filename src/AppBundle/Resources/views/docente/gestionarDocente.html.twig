{% extends "::layoutbase.html.twig" %}

{% block title %} Gestionar docentes {% endblock %}

{% block principal %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Docentes registrados en el sistema</h3>
                        <div class="box-tools">
                            <div class="input-group" style="width: 350px;">
                                <form role="form" method="post" action="{{ path('docBuscar') }}">
                                    <input type="text" name="carnet" class="form-control input-sm pull-right" placeholder="Buscar">
                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-sm btn-default"><i class="fa fa-search"></i></button></div>
                                </form>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        {% if docentes %}
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>Carnet</th>
                                    <th>Apellidos</th>
                                    <th>Nombres</th>
                                    <th>DUI</th>
                                    <th>Telefono</th>
                                </tr>
                                {% for entity in docentes%}
                                    <tr>
                                        <td>{{ entity.getCarnetdocente }}</td>
                                        <td>{{ entity.getApellidodocente }}</td>
                                        <td>{{ entity.getNombredocente }}</td>
                                        <td>{{ entity.getDui }}</td>
                                        <td>{{ entity.getTelefono }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        {% endif %}
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section>
{% endblock %}

{% block javascript2 %}
    <script href="https://code.jquery.com/jquery.js"></script>
    <script src="{{ asset('libs/AdminLTE-2.2.0/bootstrap/js/boostrap.min.js') }}"></script>
{% endblock %}