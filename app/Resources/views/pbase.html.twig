<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    {% block stylesheets %}
        <link href="{{ asset('bundles/app/css/jquery-ui.min.css') }}" rel="stylesheet" type="text/css">
        {# Aqui van los estilos de boostrap#}
        <!-- Llamamos al  Bootstrap -->
        <link href="{{ asset('libs/AdminLTE-2.2.0/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">

        <!-- Llamamos al estilo del tema -->
        <link href="{{ asset('libs/AdminLTE-2.2.0/dist/css/AdminLTE.min.css') }}" rel="stylesheet" type="text/css">

        <!-- Skin de la libreria admin -->
        <link href = "{{ asset('libs/AdminLTE-2.2.0/dist/css/skins/_all-skins.min.css') }}" rel="stylesheet" type="text/css">

        <!--Font Aweason icon-->
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">

        <!--Ionicons-->
        <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css">

        <link href="{{ asset('libs/AdminLTE-2.2.0/bootstrap/js/bootstrap.min.js') }}" rel="stylesheet">

        <link href="{{ asset('bundles/app/css/jquery-ui.min.css') }}" rel="stylesheet" type="text/css">

        <link href="{{ asset('views/alertify.core.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('views/alertify.default.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('views/style.css')}}" rel="stylesheet" type="text/css" media="all" />
    {% endblock %}
</head>
<body class="skin-blue sidebar-mini">
{% block body %}{% endblock %}
{% block javascripts %}

    <!-- JavaScript encargado del menu de usuario barra superior-->
    <script src="{{ asset('libs/AdminLTE-2.2.0/plugins/fastclick/fastclick.min.js') }}" type="text/javascript"></script>

    <!--Script de jQuery-->
    <script src="{{ asset('libs/AdminLTE-2.2.0/plugins/jQuery/jQuery-2.1.4.min.js') }}" type="text/javascript"></script>

    <!-- Fer -->
    <script src="{{ asset('bundles/app/js/jquery-ui.min.js') }}" type="text/javascript"></script>

    <!--Scritp de Bootstrap-->
    <script src="{{ asset('libs/AdminLTE-2.2.0/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>

    <!-- Script de AdminLTE-->
    <script src="{{ asset('libs/AdminLTE-2.2.0/dist/js/app.min.js') }}" type="text/javascript"></script>

    <!-- Script para demo de admin -->
    <script src="{{ asset('libs/AdminLTE-2.2.0/dist/js/demo.js') }}" type="text/javascript"></script>

    <script type="text/javascript" src="{{ asset('views/alertify.js') }}"></script>
{% endblock %}
</body>
</html>